<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/border_image">

    <ImageView
        android:id="@+id/ivProduto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="50sp">

        <TextView android:id="@+id/txt_nome_produto" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10sp"/>
        <TextView android:id="@+id/txt_preco_produto" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="10sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvEstoqueAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20sp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvEstoqueIdeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp" />

</LinearLayout>